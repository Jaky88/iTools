<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/login_whole_margin_left"
        android:layout_marginRight="@dimen/login_whole_margin_right"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/login_title_margin_top"
            android:text="@string/real_name"
            android:textColor="@color/black"
            android:drawableTop="@mipmap/ic_launcher"
            android:textSize="@dimen/level_one_heading_font" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:layout_marginTop="@dimen/login_second_title_margin_top"
            android:text="@string/alias_name"
            android:textColor="@color/black"
            android:textSize="@dimen/level_one_heading_font" />

        <EditText
            android:id="@+id/et_user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="@dimen/login_user_name_margin_top"
            android:background="@color/white"
            android:hint="@string/account"
            android:inputType="text"
            android:paddingBottom="@dimen/login_user_name_padding_bottom"
            android:paddingLeft="@dimen/login_user_name_padding_left"
            android:paddingTop="@dimen/login_user_name_padding_top"
            android:textColor="@color/black"
            android:textSize="@dimen/level_two_heading_font" />

        <EditText
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="@dimen/login_password_margin_top"
            android:background="@color/white"
            android:hint="@string/password"
            android:inputType="textPassword"
            android:paddingBottom="@dimen/login_password_padding_bottom"
            android:paddingLeft="@dimen/login_password_padding_left"
            android:paddingTop="@dimen/login_password_padding_top"
            android:textColor="@color/black"
            android:textSize="@dimen/level_two_heading_font" />

        <CheckBox
            android:id="@+id/cb_hide_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/login_contain_find_password_margin_top"
            android:text="@string/cb_hide" />

        <Button
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/login_button_margin_top"
            android:background="@color/gray"
            android:padding="@dimen/login_button_padding"
            android:text="@string/login"
            android:textColor="@color/white"
            android:textSize="@dimen/level_one_heading_font" />
    </LinearLayout>

</LinearLayout>